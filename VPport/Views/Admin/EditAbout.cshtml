@model VPport.About
@{
    ViewBag.Title = "EditAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-box-large">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Edit About</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <!-- @Html.LabelFor(model => model.about1, htmlAttributes: new { @class = "control-label col-md-2" }) -->
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.about1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.about1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back", "Index")
    </div>
</div>
<script>
    ClassicEditor
        .create(document.querySelector('#about1'))
        .catch(error => {
            console.error(error);
        });
</script>